
@{
    ViewBag.Title = "display";
}
<!DOCTYPE html>
<html>
<body background="~/export-map-share.png" alt="Map" style="background-size:100% 100%; background-attachment:fixed; width:100%; height:100%; overflow:hidden">
    <canvas id="canvas"></canvas>
    <script>
            var canvas = document.getElementById("canvas");
            var context = canvas.getContext("2d");

            context.lineWidth = 1;
            context.beginPath();
            var lon = (@ViewBag.lon + 180) * (canvas.width / 360);
            var lat = (@ViewBag.lat + 90) * (canvas.height / 180);
            context.arc(lon, lat, 6, 0, 2 * Math.PI);
            context.fillStyle = "red";
            context.fill();
            context.stroke();
    </script>
</body>
</html>